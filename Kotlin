Toast.makeText(this, "Please enter both Name and Qty", Toast.LENGTH_SHORT).show()
} else if (qty == null) {
Toast.makeText(this, "Please enter a valid Qty", Toast.LENGTH_SHORT).show()
} else {
saveSalesData(name, qty, this)
nameEdit.text.clear()
qtyEdit.text.clear()
}
}



































